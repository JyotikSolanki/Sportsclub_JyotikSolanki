<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* Add your custom styles here */
        body {
            background-color: rgba(0, 0, 0, 1);
            text-align: center;
        }

        .navbar {
            background-color: #021102;
            display: flex;
            width: 100%;
            gap: 20px;
            padding: 10px 32px 16px 68px;
        }

        .brand {
            color: #fbfffb;
            text-align: left;
            padding-left: 20px;
            font: 700 40px Judson, sans-serif;
        }
        .menu {
            display: flex;
            gap: 50px;
            font-size: 20px;
            color: #21a2ff;
            font-weight: 800;
            margin: auto 0;
        }

        .menu-item1 a {
            text-decoration: none;
            color: #21a2ff;
        }

            .menu-item1 a:hover {
                color: #ffffff; 
                background-color: #21a2ff;
                border: 2px solid #AEE8E5;
                border-radius: 5px;
                padding: 2px 5px;
            }

    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sportsclub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sportsclub.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="navbar">
                <div class="brand">D Sports Club</div>
                <div class="menu">
                    <!-- Adjust the href attributes as needed -->
                    <div class="menu-item1" button><a asp-controller="HomeController1" asp-action="Home">HOME</a></div>
                    <div class="menu-item1" button><a asp-controller="HomeController1" asp-action="About">ABOUT US</a></div>
                    <div class="menu-item1" button><a asp-controller="HomeController1" asp-action="Activity">ACTIVITIES</a></div>
                    <div class="menu-item1" button><a asp-controller="HomeController1" asp-action="Contact">CONTACT US</a></div>
                    <div class="menu-item1" button><a asp-controller="HomeController1" asp-action="Login">LOGIN</a></div>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
